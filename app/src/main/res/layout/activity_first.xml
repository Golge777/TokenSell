<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/imageLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="250dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/token_blue"
        app:srcCompat="@drawable/token_store">

        <ImageView
            android:src="@drawable/token_sell_hq_v2"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            />

    </RelativeLayout>

    <Button
        android:id="@+id/buttonQuickSell"
        android:layout_width="144dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="188dp"
        android:text="Hızlı Sat"
        android:textSize="17dp"
        android:backgroundTint="@color/token_blue"
        app:layout_constraintStart_toEndOf="@id/buttonExit"
        app:layout_constraintEnd_toStartOf="@id/buttonProducts"
        app:layout_constraintTop_toBottomOf="@+id/imageLayout" />

    <Button
        android:id="@+id/buttonProducts"
        android:layout_width="102dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="188dp"
        android:text="Ürünler"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="24dp"
        app:layout_constraintTop_toBottomOf="@+id/imageLayout" />

    <Button
        android:id="@+id/buttonExit"
        android:layout_width="102dp"
        android:layout_height="wrap_content"
        android:text="Çıkış"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="24dp"
        app:layout_constraintTop_toTopOf="@+id/buttonProducts" />
</androidx.constraintlayout.widget.ConstraintLayout>